<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_users_form_inherit" model="ir.ui.view">
            <field name="name">res.users.form.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <notebook colspan="4" position="inside">
                    <page name="base_information" string="Base Informations">
                        <group string="Organization">
                            <field name="department_id"/>
                            <field name="job_id"/>
                        </group>
                        <group string="Contact Information">
                            <field name="mobile"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="fax"/>
                        </group>
                    </page>

                </notebook>
            </field>
        </record>

        <record id="view_users_tree_inherit" model="ir.ui.view">
            <field name="name">res.users.tree.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <tree string="Users">
                    <field name="login" position="after">
                        <field name="mobile"/>
                        <field name="email"/>
                    </field>
                </tree>
            </field>
        </record>

        <record id="view_users_search_inherit" model="ir.ui.view">
            <field name="name">res.users.search.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_search"/>
            <field name="arch" type="xml">
                <search string="Users">
                    <field name="name" position="rechange">
                        <field name="name"
                           filter_domain="['|', '|', '|', ('name','ilike',self), ('login','ilike',self), ('mobile','ilike',self), ('email','ilike',self)]"
                           string="User"/>
                    </field>
                    <filter name="Inactive" position="after">
                        <group expand="0" name="group_by" string="Group By">
                            <filter name="salesperson" string="Salesperson" domain="[]" context="{'group_by' : 'user_id'}" />
                            <filter string="Company" context="{'group_by': 'company_id'}"/>
                            <filter string="Department" context="{'group_by': 'department_id'}"/>
                            <filter string="Job" context="{'group_by': 'job_id'}"/>
                       </group>
                    </filter>
                </search>
            </field>
        </record>

